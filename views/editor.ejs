<!DOCTYPE html>

<%-include('./partials/head.ejs')%>

<body>
    <h1 class="page-title">To-Do List</h1>

    <form class="add-task-form" action="/add-task" method="POST">
        <div class="form-group">
            <input type="text" name="title" class="form-input" placeholder="Task Title">
            <input type="date" name="date" class="form-input">
        </div>
        <div class="form-group">
            <input type="text" name="description" class="form-input" placeholder="Task Description">
        </div>
        <div class="form-group">
            <button type="submit" class="form-button">Add Task</button>
        </div>
    </form>

    <div class="todo-list">
        <% if (tasklist.length > 0) { %>
            <% tasklist.forEach(task => { %>
                <div class="task-container">
                    <div class = "update-task-container">
                        <div class update-task>Not completed</div>
                    </div>
                    <div class="task-title-container">
                        <div class="task-title"><%= task.title %></div>
                        <div class="task-description"><%= task.description %></div>
                    </div>
                    <div class="task-due-date"> <%= task.date %></div>
                </div>
            <% })} %>
    </div>
</body>
</html>